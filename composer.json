{
    "name": "sniccowp/sniccowp",
    "description": "The SniccoWP framework",
    "license": "mixed",
    "authors": [
        {
            "name": "Calvin Alkan",
            "email": "calvin@snicco.de"
        }
    ],
    "type": "library",
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "pimple/pimple": "^3.0.0",
        "psr/container": "^1.0.0",
        "symfony/finder": "^5.0-stable",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "sniccowp/pimple-bridge": "dev-master",
        "symplify/monorepo-builder": "^9.4"
    },
    "autoload": {
        "files": [
            "src/Snicco/Component/core/src/Utils/functions.php"
        ],
        "psr-4": {
            "Snicco\\Bridge\\Pimple\\": "src/Snicco/Bridge/pimple/src",
            "Snicco\\Component\\Core\\": "src/Snicco/Component/core/src",
            "Snicco\\Component\\StrArr\\": "src/Snicco/Component/str-arr/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Snicco\\Bridge\\Pimple\\Tests\\": "src/Snicco/Bridge/pimple/tests",
            "Snicco\\Component\\Core\\Testing\\": "src/Snicco/Component/core/Testing",
            "Snicco\\Component\\Core\\Tests\\": "src/Snicco/Component/core/tests",
            "Snicco\\Component\\StrArr\\Tests\\": "src/Snicco/Component/str-arr/tests"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "failed-tests": "vendor/bin/codecept run -g failed",
        "unit": "vendor/bin/codecept run -s integration",
        "integration": "vendor/bin/codecept run -s unit",
        "tests": [
            "@integration",
            "@unit"
        ],
        "merge": [
            "vendor/bin/monorepo-builder merge",
            "composer dump-autoload"
        ],
        "deptrac": "php /usr/local/bin/deptrac"
    },
    "replace": {
        "sniccowp/core": "self.version",
        "sniccowp/pimple-brige": "self.version",
        "sniccowp/str-arr": "self.version"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
