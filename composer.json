{
  "name": "htmlburger/wpemerge",
  "description": "A micro framework which modernizes WordPress as a CMS development by providing tools to implement MVC and more.",
  "type": "library",
  "keywords": ["wordpress", "framework", "controller", "template", "view", "request", "response", "middleware", "wpemerge"],
  "license": "GPL-2.0-only",
  "minimum-stability": "dev",
  "repositories":
  [
    {
      "type": "vcs",
      "url": "https://github.com/calvinalkan/better-wordpress-database"
    },
    {
      "type": "vcs",
      "url": "https://github.com/calvinalkan/database"
    },
     {
      "type": "vcs",
      "url": "https://github.com/calvinalkan/view"
    }

  ],
  "require": {
    "php": "^7.3",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-mbstring": "*",
    "calvinalkan/base-container": "0.1.*",
    "calvinalkan/better-wordpress-hooks": "0.1.8",
    "calvinalkan/reflection-payload": "^1.0",
    "illuminate/collections": "8.35.1",
    "illuminate/config": "8.35.1",
    "nikic/fast-route": "1.3.0",
    "nyholm/psr7": "1.4.0",
    "nyholm/psr7-server": "^1.0-stable",
    "psr/log": "1.1.4",
    "psr/http-server-middleware": "1.0.1",
    "symfony/finder": "^5.0-stable"
  },
  "require-dev": {
    "opis/closure": "3.6.2",
    "illuminate/encryption": "8.40.0",
    "filp/whoops": "^2.2",
    "mockery/mockery": "^1.4.2",
    "phpunit/phpunit": "^9.0",
    "calvinalkan/better-wordpress-database": "dev-master",
    "lucatume/wp-browser": "3.0.6",
    "illuminate/view": "dev-feature_view_interface_instead_of_view_implementation",
    "adriansuter/php-autoload-override": "^1.2",
    "slim/csrf": "1.2.1"
  },

  "suggest": {
    "opis/closure": "Required if you want to cache routes that use closures [3.6.2]",
    "illuminate/encryption": "Required if you want to use strong session encryption [8.40.0]",
    "slim/csrf" : "Required if you want to you csrf protection with sessions [1.2.1]",
    "flip/whoops" : "Required if you want the pretty page error handler during devolopment"
  },

  "autoload": {
    "psr-4": {
      "WPEmerge\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WPEmerge\\": "src/",
      "Tests\\" : "tests/"
    },
    "files": [
      "tests/stubs/FunctionOverride.php"
    ]
  }
}
