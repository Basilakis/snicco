{
  "name": "sniccowp/blade-bridge",
  "description": "Use v8.x of Laravels Blade templating engine in WordPress. Fully tested and production ready.",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Calvin Alkan",
      "email": "calvin@snicco.de"
    }
  ],
  "require": {
    "php": "^7.4",
    "sniccowp/templating": "dev-master",
    "illuminate/view": "^v8.0.0",
    "sniccowp/scopable-wp": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Snicco\\Bridge\\Blade\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Snicco\\Bridge\\Blade\\Tests\\": "tests"
    }
  }
}